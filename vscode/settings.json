{
        // Fonts
    "terminal.integrated.fontFamily": "Jetbrains Mono",
    "editor.inlayHints.fontFamily": "Jetbrains Mono",
    "editor.fontFamily": "Jetbrains Mono",
    "editor.fontLigatures": true,

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "latex-workshop.view.pdf.viewer": "tab",
    "files.exclude": {
        "**/.factorypath": true,
        "**/.classpath": true,
        "**/.settings": true,
        "**/.project": true,
    },
    "search.useIgnoreFiles": false,


    "editor.suggestSelection": "first",
    "editor.wrappingIndent": "same",
    "editor.tabCompletion": "on",
    "editor.rulers": [80],
    
    



        // Vim
    "vim.leader": "space",
    "vim.highlightedyank.enable": true,
	"vim.neovimUseConfigFile": true,
    "vim.useSystemClipboard": true,
    "vim.showMarksInGutter": true,
    "vim.vimrc.enable": true,
    "vim.enableNeovim": true,
    "vim.showmodename": true,
    "vim.visualstar": true,
    "vim.hlsearch": true,
    "vim.startofline": false,
    "vim.searchHighlightTextColor": "rgb(0,0,0)",
    "vim.searchHighlightColor": "rgb(255,255,0)",
    "vim.neovimPath": "/usr/bin/nvim",
		"vim.handleKeys": {
			"<C-b>": false,
			"<C-w>": false,
			// "<C-d>": false,
			"<C-f>": false,
			"<C-h>": false
		},
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [">"],
            "after": [">","g","v"]
        },
        {
            "before": ["<"],
            "after": ["<", "g","v"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>","."],
            "commands": ["workbench.action.openSettingsJson"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": [ "-" ],
            "after": [ "/" ]
        },
        {
            "before": ["y","p"],
            "after": ["\"","0","p"]
        },
        {
            "before": ["g","d"],
            "commands": ["editor.action.revealDefinition"]
        },
        {
            "before": ["g","f"],
            "commands": ["editor.action.openLink"]
        },
        {
            "before": ["]","g"],
            "commands": ["editor.action.marker.next"]

        },
        {
            "before": ["[","g"],
            "commands": ["editor.action.marker.prev"]

        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
    ],


    "python.languageServer": "Pylance",
    "debug.javascript.autoAttachFilter": "smart",
    // "[javascript]": {
    //     "editor.defaultFormatter": "esbenp.prettier-vscode",
    //     "editor.formatOnSave": true
    // },
    // "[typescript]": {
    //     "editor.defaultFormatter": "esbenp.prettier-vscode",
    //     "editor.formatOnSave": true
    // },
    "files.associations": {
        "*.hs": "haskell"
    },
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-11",
            "path": "/usr/lib/jvm/java-11-openjdk",
            "default": true
        }
    ],
    "java.home": "/usr/lib/jvm/java-11-openjdk",
    "csharp.semanticHighlighting.enabled": true,
    "projectManager.git.baseFolders": [
        "~/hsr/epj/api",
        "~/hsr/epj/documentation",
        "~/hsr/epj/frontend",
        "~/hsr/epj/runner",
        "~/hsr/ds1/ds1"
    ],
    "peacock.favoriteColors": [
        {
            "name": "Angular Red",
            "value": "#dd0531"
        },
        {
            "name": "Azure Blue",
            "value": "#007fff"
        },
        {
            "name": "JavaScript Yellow",
            "value": "#f9e64f"
        },
        {
            "name": "Mandalorian Blue",
            "value": "#1857a4"
        },
        {
            "name": "Node Green",
            "value": "#215732"
        },
        {
            "name": "React Blue",
            "value": "#61dafb"
        },
        {
            "name": "Something Different",
            "value": "#832561"
        },
        {
            "name": "Svelte Orange",
            "value": "#ff3d00"
        },
        {
            "name": "Vue Green",
            "value": "#42b883"
        }
    ],
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.cursorStyle": "line",
    "editor.lineNumbers": "on",
    "editor.wordWrap": "off",
    "window.zoomLevel": 1,

        // Spaces
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,

        // Design
    "workbench.productIconTheme": "material-product-icons",
    "workbench.colorTheme": "Gruvbox Material Dark",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#8a8787",
        "editor.selectionHighlightBackground": "#8a8787"
    },
    "material-icon-theme.folders.color": "#90a4ae",
    "material-icon-theme.folders.theme": "specific",
    "material-icon-theme.opacity": 1,
    "material-icon-theme.saturation": 1,
}